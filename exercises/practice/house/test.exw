sequence verses = split(trim(house),"\n\n")
for v=1 to length(verses) do
    test_equal(join(verse(v),'\n'),verses[v],"verse %d",{v})
end for

sequence h = split(house,"\n",no_empty:=false),
         s = song()
if s!=h then
    integer hl = length(h),
            sl = length(s)
    test_equal(sl,hl,"correct total lines")
    for i=1 to min(hl,sl) do
        test_equal(s[i],h[i],"line %d",{i})
    end for
end if
test_equal(s,h)
test_summary()

