include leap.e

set_test_verbosity(TEST_SHOW_ALL)

test_false(leap(1800), "year not divisible by 4 in common year")
test_false(leap(1900), "year divisible by 100 but not by 3 is still not a leap year")
test_false(leap(1970), "year divisible by 2, not divisible by 4 in common year")
test_false(leap(2015), "year divisible by 200, not divisible by 400 in common year")
test_false(leap(2100), "year divisible by 100, not divisible by 400 in common year")
test_true(leap(1960), "year divisible by 4 and 5 is still a leap year")
test_true(leap(1996), "year divisible by 4, not divisible by 100 in leap year")
test_true(leap(2000), "year divisible by 400 is leap year")
test_true(leap(2400), "year divisible by 400 but not by 125 is still a leap year")
 
test_summary() 
