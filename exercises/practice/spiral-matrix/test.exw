include spiral-matrix.e

constant tests = {{"empty spiral",0,{}},
                  {"trivial spiral",1,{{1}}},
                  {"spiral of size 2",2,{{1,2},
                                         {4,3}}},
                  {"spiral of size 3",3,{{1,2,3},
                                         {8,9,4},
                                         {7,6,5}}},
                  {"spiral of size 4",4,{{ 1, 2, 3, 4},
                                         {12,13,14, 5},
                                         {11,16,15, 6},
                                         {10, 9, 8, 7}}}}
set_test_verbosity(TEST_SHOW_ALL)
